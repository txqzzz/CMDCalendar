<Page
    x:Class="CMDCalendar.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CMDCalendar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <SymbolIconSource x:Key="DeleteIcon" Symbol="Delete" />
        <SymbolIconSource x:Key="PinIcon" Symbol="Pin" />

        <SwipeItems x:Key="RevealOptions" Mode="Reveal">
            <SwipeItem Text="Pin" IconSource="{StaticResource PinIcon}" />
        </SwipeItems>

        <SwipeItems x:Key="ExecuteDelete" Mode="Execute">
            <SwipeItem Text="Delete"
                       IconSource="{StaticResource DeleteIcon}"
                       Background="Red"
                       Invoked="SwipeItem_Invoked" />
        </SwipeItems>
    </Page.Resources>
    <Page.DataContext>
        <Binding Source="{StaticResource SliberPageViewModel}" />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="0,0,0,0"
                    VerticalAlignment="Center">
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <AppBarButton Icon="Add"
                                  Foreground="SteelBlue"
                                  Click="AddButton_Click" />
                    <TextBlock Foreground="SteelBlue"
                               Margin="0,-10,0,0"
                               VerticalAlignment="Center"
                               Style="{ThemeResource TitleTextBlockStyle}"
                               Text="New" />
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <TextBlock Grid.ColumnSpan="2"
                               Margin="12,8,8,8"
                               Foreground="SteelBlue"
                               Style="{ThemeResource TitleTextBlockStyle}"
                               Text="Event List" />
                    <ListView x:Name="ScheduleListView"
                              ItemsSource="{Binding EventCollection}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Content}" FontSize="18" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="2">
            <TextBlock Grid.ColumnSpan="2"
                       Margin="12,8,8,8"
                       Foreground="SteelBlue"
                       VerticalAlignment="Center"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       Text="Task List" />
            <ListView x:Name="TodoListView"
                      IsItemClickEnabled="True"
                      ItemClick="TodoListView_ItemClick"
                      RightTapped="TodoListView_RightTapped"
                      ItemsSource="{Binding TaskCollection}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">

                        <SwipeControl x:Name="ListViewSwipeContainer"
                                      LeftItems="{StaticResource RevealOptions}"
                                      RightItems="{StaticResource ExecuteDelete}"
                                      Height="60">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Content}" FontSize="18" />
                            </StackPanel>
                        </SwipeControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Resources>
                    <MenuFlyout x:Name="toDoMenuFlayout">
                        <MenuFlyout.Items>
                            <MenuFlyoutItem x:Name="Pin" Text="Pin"
                                            Click="Pin_Click" />
                            <MenuFlyoutItem x:Name="Remove" Text="Remove"
                                            Command="{Binding  DeleteCommand}" />
                        </MenuFlyout.Items>
                    </MenuFlyout>
                </ListView.Resources>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Button x:Name="TestReadEventButton" Click="TestReadEventButton_Click" Content="TestReadEvent"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Foreground="SteelBlue" Margin="0,25,0,0"/>
            <Button Click="SummonDragon" Content="SummonDragon" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Foreground="SteelBlue"/>
            <Button x:Name="TestReadTaskButton" Click="TestReadTaskButton_Click" Content="TestReadTask"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Foreground="SteelBlue"/>
                <Button x:Name="NotificationButton" Click="NotificationButton_OnClick" Content="StopNotification" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Foreground="SteelBlue"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="178,168,-178,208"
                    Grid.RowSpan="2" VerticalAlignment="Stretch" />
        <CalendarView CalendarViewDayItemChanging="CalendarView_OnCalendarViewDayItemChanging"
                      HorizontalAlignment="Center" Height="845" VerticalAlignment="Top" Width="1190"
                      Grid.Column="1" Grid.RowSpan="2" Margin="0,0,0,0" Grid.Row="1" />
    </Grid>
</Page>